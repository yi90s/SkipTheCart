<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".presentation.employee.OrdersActivity">

	<android.support.v7.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="@color/colorPrimary"
		android:theme="@style/ToolbarStyle"
		app:popupTheme="@style/AppTheme.PopupOverlay"
		app:titleTextColor="#fff" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView
			android:id="@+id/noOrdersMsg"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center"
			android:gravity="center"
			android:text="@string/no_orders_msg"
			android:textAlignment="center"
			android:textSize="24sp"
			android:visibility="gone" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/live_orders"
			android:textAlignment="center"
			android:textSize="20sp"
			android:textStyle="bold" />

		<ListView
			android:id="@+id/ordersList"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

		<TextView
			android:id="@+id/live_orders"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/no_live_orders"
			android:textAlignment="center"
			android:textSize="18sp" />

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/orders_history"
			android:textAlignment="center"
			android:textSize="20sp"
			android:textStyle="bold" />

		<ListView
			android:id="@+id/ordersHistoryList"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<TextView
			android:id="@+id/orders_history"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/no_orders_history"
			android:textAlignment="center"
			android:textSize="18sp" />
	</LinearLayout>
</LinearLayout>
